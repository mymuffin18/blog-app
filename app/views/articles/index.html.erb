<div class='flex justify-center'>
  <div class='flex flex-col items-center w-full md:w-3/5 border'>
    <div class='flex flex-col items-center w-4/5 gap-2 mt-2 mb-4'>
      <h1 class='text-4xl font-bold'>Articles</h1>
      <% if user_signed_in? %>
      <div class='self-end'>
        <%= link_to "Create article", new_article_path, class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>


    <% if @articles.empty? %>
      <p class='text-4xl fond-semibold'>No articles yet.</p>
    <% else %>
    <div class='flex flex-col items-center w-3/4 mt-2 gap-2 mb-2'>
        <% @articles.each do |article| %>
          <div class="w-full border-2 rounded-md h-20 flex items-center justify-between px-5">
            <h1 class='font-semibold text-2xl truncate'><%= article.title %></h1>
            <%= link_to "Show", article %>
          </div>
        <% end %>    
    </div>
  
    <% end %>

  </div>
</div>
